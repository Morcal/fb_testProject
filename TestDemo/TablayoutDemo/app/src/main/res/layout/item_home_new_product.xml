<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/small_module_distance">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.feibo.snacks.view.widget.HWRadioImageView
            xmlns:app="http://schemas.android.com/apk/res/com.feibo.snacks"
            android:id="@+id/item_home_promotion_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/default_class_activiyt612_340"
            app:hwRadio="0.556" />
        <ImageView
            android:id="@+id/item_goods_empty"
            android:layout_width="@dimen/sell_empty"
            android:layout_height="@dimen/sell_empty"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_end"
            android:visibility="gone" />
        <TextView
            android:id="@+id/item_home_product_tag"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:background="@drawable/bg_lable"
            android:text="饼干"
            android:textColor="@color/c6"
            android:textSize="@dimen/s5"
            android:gravity="center_vertical"
            android:visibility="invisible"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/item_home_promotion_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:maxEms="14"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="喜之郎百种果酱甜蜜蜜转场"
            android:textColor="@color/c2"
            android:textSize="@dimen/s8" />

        <TextView
            android:id="@+id/item_goods_cur_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/item_home_promotion_desc"
            android:gravity="center_vertical"
            android:text="￥100"
            android:textColor="@color/color_five"
            android:textSize="@dimen/s8" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_marginTop="11dp"
        style="@style/FineLineC4Style" />

</LinearLayout>