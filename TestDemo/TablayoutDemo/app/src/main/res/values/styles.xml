<resources>

     <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">  
        <item name="android:windowEnterAnimation">@anim/category_select_out</item>  
        <item name="android:windowExitAnimation">@anim/category_select_in</item>  
    </style>  
      
    <style name="dialogWindowAnimation" parent="android:Animation" mce_bogus="1">  
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>  
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>  
    </style>

    <style name="collectDeleteOperation" parent="android:Animation" mce_bogus="1">  
        <item name="android:windowEnterAnimation">@anim/bottom_out</item>  
        <item name="android:windowExitAnimation">@anim/bottom_in</item>  
    
    </style>
    
    <style name="loadingAnimStyle">
        <item name="android:indeterminateDrawable">@anim/progressbar_loading</item>
    </style>
    
    <style name="SimpleDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="LoginEditTextStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/c2</item>
        <item name="android:textSize">@dimen/s4</item>
        <item name="android:textColorHint">@color/c7</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="AddressEditTextStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/c8</item>
        <item name="android:textSize">@dimen/s4</item>
        <item name="android:textColorHint">@color/c7</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="detailSurplus">
        <item name="android:textSize">@dimen/s7</item>
        <item name="android:textColor">@color/c1</item>
    </style>

    <style name="detailCountDown">
        <item name="android:textSize">@dimen/s8</item>
        <item name="android:textColor">@color/c1</item>
    </style>

    <style name="PersonOrderStateItemStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NavibarBtnStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">@color/c8</item>
        <item name="android:textSize">@dimen/s7</item>
        <item name="android:background">@drawable/bg_navibar</item>
    </style>

    <style name="CustomProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:background">@android:color/transparent</item>-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textSize">@dimen/s4</item>
        <item name="android:textColor">@color/c3</item>
    </style>

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ThreeIconParentLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/login_three_btn_magin</item>
        <item name="android:layout_marginRight">@dimen/login_three_btn_magin</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FineLineMarginStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fine_line_height</item>
        <item name="android:layout_marginLeft">@dimen/both_sides_new_distance</item>
        <item name="android:layout_marginRight">@dimen/both_sides_new_distance</item>
        <item name="android:background">@color/c4</item>
    </style>

    <style name="FineLineC4Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fine_line_height</item>
        <item name="android:background">@color/c4</item>
    </style>

    <style name="BoldLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/blod_line_height</item>
        <item name="android:background">@color/c5</item>
    </style>

    <style name="FineLineC7Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fine_line_height</item>
        <item name="android:background">@color/c7</item>
    </style>
</resources>
